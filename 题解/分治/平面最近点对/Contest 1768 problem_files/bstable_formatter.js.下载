// ********************
// Bs5 Tkind icon
// ********************
function FormatterTkindBs5(value, row, index) {
    let v = value === null ? 0 : value;
    let icon = "balloon", title_tip = "å¸¸è§„é˜Ÿ", txtcolor="text-success";
    if(v == 1) {
        icon = "balloon-heart", title_tip = "å¥³é˜Ÿ", txtcolor="text-danger";
    } else if(v == 2) {
        icon = "star", title_tip = "æ‰“æ˜Ÿé˜Ÿ", txtcolor="text-primary";
    }
    return `<i class="${txtcolor} bi bi-${icon}" title="${title_tip}"></i>`;
}